procedure TForm1.btnObjectiveClick(Sender: TObject);
var
  vfile : textfile;
  vline : string;
begin
  tpage.ActivePage := objectives;
  assignfile(vfile,'objective.txt');
  reset(vfile);
  redobjective.Lines.clear;
  while not EOF(vfile) do
    begin
      readln(vfile,vline);
      redobjective.Lines.Add(vline);
    end;
end;

